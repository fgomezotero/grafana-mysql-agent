node {
  checkout scm
  stage('Deploy mysql-client') {
    sh 'oc rollout latest deploymentconfig/mysql-client'
    sh 'oc scale deploymentconfig mysql-client --replicas=1'
    sh 'oc delete deploymentconfig,services,routes -l app=grafana'
    openshiftVerifyDeployment depCfg: 'mysql-client', replicaCount: '1', verbose: 'false', verifyReplicaCount: 'true', waitTime: '60', waitUnit: 'sec'
  }
